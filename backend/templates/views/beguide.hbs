<body>

    <section class="header">
        {{>navbar}}

        <!-- Text box Bangladesh -->

        <div class="textbox">
            <h1>Join as a Guide</h1>
        </div>

    </section>

    <section class="beguide">
        <form action="guides_data.php" method="post">
            <h3>Join as a guide</h3>
            <input type="text" id="name" name="name" placeholder="Name"><br>
            <input type="email" id="email" name="email" placeholder="Email"><br>
            <input type="text" id="location" name="location" placeholder="Location"><br>
            <input type="text" id="language" name="language" placeholder="Language"><br>
            <input type="tel" id="mobile" name="mobile" placeholder="Contact"><br>
            <input type="text" id="experience" name="experience" placeholder="Experience"><br>
            <input type="number" id="price" name="price" placeholder="Price/Day"><br>

            <button type="submit">Register</button>
        </form>
    </section>

    {{>footer}}
    <!-- JavaScript for toggle menu -->

    <script>
        var Navlink = document.getElementById("Navlink");
        function showmenu(){
            Navlink.style.right = "0";
        }
        function hidemenu(){
            Navlink.style.right = "-200px";
        }
    </script>

